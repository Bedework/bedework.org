<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.bedework</groupId>
  <artifactId>bedework-website</artifactId>
  <version>1.0</version>
  <packaging>pom</packaging>

  <name>Bedework Project Web Site</name>
  <description>This is the static website for the Bedework project.</description>
  <url>http://bedework.org/</url>
  <inceptionYear>2015</inceptionYear>

  <scm>
    <connection>scm:git:git@github.com:Bedework/bedework.org.git</connection>
    <developerConnection>scm:git:git@github.com:Bedework/bedework.org.git</developerConnection>
    <url>scm:git:git@github.com:Bedework/bedework.org.git</url>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <!-- Instruct the build to use only UTF-8 encoding for source code -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.build.timestamp.format>yyyy-MM-dd HH:mm:ss</maven.build.timestamp.format>
  </properties>

</project>

